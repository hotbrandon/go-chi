# Application Configuration
APP_ADDR=:8080

# ============================================================================
# OPTION 1: Full DSN Strings (Recommended - Simpler)
# ============================================================================
# Format: oracle://username:password@host:port/service_name

ORA_SALES_DSN=oracle://app_user:sales_pass@192.168.1.10:1521/SALES
ORA_MARKETING_DSN=oracle://app_user:mkt_pass@192.168.1.11:1521/MARKETING
ORA_ENGINEERING_DSN=oracle://app_user:eng_pass@192.168.1.12:1521/ENGINEERING
ORA_FINANCE_DSN=oracle://app_user:fin_pass@192.168.1.13:1521/FINANCE
ORA_HR_DSN=oracle://app_user:hr_pass@192.168.1.14:1521/HR

# ============================================================================
# OPTION 2: Component-Based (More Flexible)
# ============================================================================
# Use this if you need to adjust connection parameters programmatically

# Sales Database
ORA_SALES_HOST=192.168.1.10
ORA_SALES_PORT=1521
ORA_SALES_SID=SALES
ORA_SALES_USER=app_user
